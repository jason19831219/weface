.list .item .btn{
  height: 200rpx;
  line-height: 200rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.list .item .right-arrow{
  position: absolute;
  right: 20rpx;
  top: 80rpx;
  margin-right: 0;
}

.vector-holer{
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  border-top: 1px solid rgb(229, 229, 229);
}

.vector-holer image{
  width: 160rpx;
  height: 147rpx;
  display: inline-block;
  vertical-align: bottom;
}

.vector-holer text{
  display: block;
  width: 100%;
  text-align: center;
  color: rgb(153,153,153);
  font-size: 26rpx;
  line-height: 100rpx;
}

