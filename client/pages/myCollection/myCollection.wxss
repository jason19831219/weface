}
.list .item .main .right-holder{
  left: 0rpx;
  right: auto;
  width: 100%;
  bottom: 0;
  text-align: left;
  top: auto;
  height: 37rpx;
  line-height: 37rpx;
  position: relative;
}

.list .item .main .right-holder .up{
  display: inline-block;
  position: relative;
  height: 26rpx;
  line-height: 26rpx;
  top: auto;
  right: auto;
  left: auto;
  bottom: auto;
  text-align: left;
  width: auto;
  padding-right: 20rpx;
  border-right: 1px solid rgb(153, 153, 153);
  margin-right: 20rpx;
}

.list .item .main .right-holder .down{
  display: inline-block;
  position: relative;
  height: 26rpx;
  line-height: 26rpx;
  top: auto;
  right: auto;
  left: auto;
  bottom: auto;
  text-align: left;
  width: auto;
  color: rgb(0, 0, 0);

}

