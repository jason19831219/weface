.list-holer{
  text-align: left;
}
.list-title,
.list-item{
  position: relative;
  text-align: left;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  overflow: hidden;
}
.list-title {
  border-top: 1px solid rgb(229, 229, 229);
  border-bottom: 1px solid rgb(229, 229, 229);
}
.list-title text{
  font-size: 30rpx;
  color: rgb(153,153,153);
  margin-left: 30rpx;
  vertical-align: middle;
}
.list-item text{
  font-size: 34rpx;
  color: rgb(0,0,0);
  margin-left: 20rpx;
  vertical-align: middle;
}

.list-item .list-cover{
  position: absolute;
  border-bottom: 1px solid rgb(229, 229, 229);
  text-align: left;
  line-height: 88rpx;
  height: 88rpx;
  box-sizing: border-box;
  display: block;
  width: 100%;
  background-color: rgb(255, 255, 255);
}

.list-item button{
  position: absolute;
  font-size: 34rpx;
  width: 4.186rem;
  line-height: 86rpx;
  height: 86rpx;
  right: 0;
  top: 0;
  background-color: rgb(230, 67, 64);
  border-radius: 0;
  color: rgb(255, 255, 255);
}

.list-item .image-holder{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 40rpx;
}

.list-item .image-holder image{
  width: 100%;
  height: 100%;
}

.list .item {
  width: 690rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
}

.list .title .main {
  border-bottom: 0;
}

.list .item .main{
  margin-left: 0rpx;
  width: 690rpx;
  height: 200rpx;
  border:1px solid rgb(229, 229, 229);
  box-shadow:0px 3px 6px 0px rgba(0, 0, 0, 0.03);
  border-radius: 10rpx;
  overflow: hidden;
}

.list .item .main .avatar{
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  left: -1rpx;
  top: -1rpx;
}

.list .item .main .left-holder{
  left: 219rpx;
  top: 19rpx;
  width: 200rpx;
  height: 160rpx;


}

